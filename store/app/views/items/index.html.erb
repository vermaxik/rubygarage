<h1>Items</h1>
<% if @items.empty? %>
	<b>No items in store</b>
<% else %>
<table>
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Price</th>
		<th>View</th>
		<th>Delete</th>
	</tr>
	<% @items.each do |i| %>

		<tr>
			<td><%= i.id %></td>
			<td><%= link_to i.name, item_path(i) %></td>
			<td>$<%= i.price %></td>
			<td><%= i.votes_count %>, <%= link_to "+", upvote_item_path(i) %></td>
			<td><%= link_to "Delete", i, method: :delete, data: { confirm: "Are you sure?" } %></td>
		</tr>
		
	<% end %>
</table>

<% end %>